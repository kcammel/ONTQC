
/*
Necessary inputs:
fastq or bam/cram
sample_id (or some sort of identifier)
output location
threads
reference (if bam/cram)
output filename

*/

//conda.enabled = true
//docker.enabled = true

includeConfig 'conf/cramino.config'
includeConfig 'conf/nanoplot.config'

manifest {
    name = "kcammel/ONTQC"
    contributors = [
      [
        name: "Karlijn Cammel",
        affiliation: "Prinses MÃ¡xima Centrum",
        github: "kcammel",
        contribution: ['author', 'maintainer'],

      ]
    ]
    homePage = "https://github.com/kcammel/ONTQC"
    description = "Nanopore sequencing QC pipeline"
    mainScript = "main.nf"
    defaultBranch = "master"
    nextflowVersion = ">=25.04.6"
    version = "0.1.0"
}

plugins {
  id 'nf-schema@2.5.1'
}

params {
  input = "samplesheet.csv"
  outdir = "results"
}


validation {
  help {
    command = "Nextflow run main.nf --input samplesheet.csv --outdir results"
    beforeText = "This pipeline runs a QC for ONT sequencing data"
    enabled = true
  }
}

report.enabled = true